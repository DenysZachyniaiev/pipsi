@model WebApp.Models.ScheduleEntry

@{
    ViewData["Title"] = "Edit Schedule Entry";
}

<h2>Edit Schedule Entry for class @ViewBag.ClassName</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" name="className" value="@ViewBag.ClassName" />

    <div class="mb-3">
        <label asp-for="Day" class="form-label"></label>
        <select asp-for="Day" asp-items="ViewBag.Days" class="form-select"></select>
        <span asp-validation-for="Day" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Hour" class="form-label"></label>
        <input asp-for="Hour" type="number" min="1" max="12" class="form-control" />
        <span asp-validation-for="Hour" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Date" class="form-label">Data</label>
        <input asp-for="Date" type="date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SubjectId" class="form-label"></label>
        <select asp-for="SubjectId" asp-items="ViewBag.Subjects" class="form-select">
            <option value="">-- Select subject --</option>
        </select>
        <span asp-validation-for="SubjectId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ClassroomNumber" class="form-label"></label>
        <input asp-for="ClassroomNumber" class="form-control" />
        <span asp-validation-for="ClassroomNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="ViewSchedule" asp-route-className="@ViewBag.ClassName" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}