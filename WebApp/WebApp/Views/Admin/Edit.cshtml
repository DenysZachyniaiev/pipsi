@model WebApp.ViewModels.EditUserViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<h2>@Localizer["EditUser"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Email">@Localizer["Email"]</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="StudentFirstName">@Localizer["FirstName"]</label>
        <input asp-for="StudentFirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="StudentLastName">@Localizer["LastName"]</label>
        <input asp-for="StudentLastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Role">@Localizer["Roles"]</label>
        <select class="form-select" asp-for="Role" required>
            <option value="Admin">@Localizer["Admin"]</option>
            <option value="Director">@Localizer["Director"]</option>
            <option value="Teacher">@Localizer["Teacher"]</option>
            <option value="Student">@Localizer["Student"]</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">@Localizer["Save"]</button>
    <a asp-action="Index" class="btn btn-secondary">@Localizer["Cancel"]</a>
</form>