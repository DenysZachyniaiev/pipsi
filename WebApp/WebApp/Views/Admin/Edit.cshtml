@model WebApp.ViewModels.EditUserViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<h2>@Localizer["EditUser"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Email">@Localizer["Email"]</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="FullName">@Localizer["FullName"]</label>
        <input asp-for="FullName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Role">@Localizer["Roles"]</label>
        <select class="form-select" name="role" required>
            <option value="Admin" selected="@(Model.Role == "Admin" ? "selected" : null)">@Localizer["Admin"]</option>
            <option value="Director" selected="@(Model.Role == "Director" ? "selected" : null)">@Localizer["Director"]</option>
            <option value="Teacher" selected="@(Model.Role == "Teacher" ? "selected" : null)">@Localizer["Teacher"]</option>
            <option value="Student" selected="@(Model.Role == "Student" ? "selected" : null)">@Localizer["Student"]</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">@Localizer["Save"]</button>
    <a asp-action="Index" class="btn btn-secondary">@Localizer["Cancel"]</a>
</form>