@model List<(WebApp.Models.AppUser User, string Role)>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<h2>@Localizer["Users"]</h2>

<input type="text" id="searchInput" class="form-control mb-3" placeholder="@Localizer["SearchUsersPlaceholder"]" />
<table class="table table-bordered sortable-table">
    <thead>
        <tr>
            <th>@Localizer["ID"] <span class="sort-icon">↕</span></th>
            <th>@Localizer["Email"] <span class="sort-icon">↕</span></th>
            <th>@Localizer["FullName"] <span class="sort-icon">↕</span></th>
            <th>@Localizer["Role"] <span class="sort-icon">↕</span></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.User.Id</td>
                <td>@item.User.Email</td>
                <td>@($"{item.User.FirstName} {item.User.LastName}")</td>
                <td>@item.Role</td>
            </tr>
        }
    </tbody>
</table>

<form asp-controller="Admin" asp-action="Edit" method="get" class="d-flex align-items-center mt-4">
    <input type="text" name="id" class="form-control w-auto me-2" placeholder="@Localizer["EnterIDToEdit"]" required />
    <button type="submit" class="btn btn-primary">@Localizer["Edit"]</button>
</form>

<form asp-controller="Admin" asp-action="Delete" method="get" class="d-flex align-items-center mt-4">
    <input type="text" name="id" class="form-control w-auto me-2" placeholder="@Localizer["EnterIDToDelete"]" required />
    <button type="submit" class="btn btn-danger">@Localizer["Delete"]</button>
</form>