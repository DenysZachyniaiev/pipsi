@model List<WebApp.Models.Student>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<div class="tab-content mt-3" id="tabsContent">
    <div class="tab-pane fade show active" id="all" role="tabpanel">
        <h4>@Localizer["AllStudents"]</h4>
        <input type="text" class="form-control mb-3" placeholder="@Localizer["SearchPlaceholder"]" />

        <div class="table-responsive">
            <table class="table table-bordered sortable-table">
                <thead>
                    <tr>
                        <th>@Localizer["ID"] <span class="sort-icon">↕</span></th>
                        <th>@Localizer["FirstName"] <span class="sort-icon">↕</span></th>
                        <th>@Localizer["LastName"] <span class="sort-icon">↕</span></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.Id</td>
                            <td>@student.FirstName</td>
                            <td>@student.LastName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (!User.IsInRole("Student"))
{
    <div class="mt-3">
        <a asp-action="Classes" class="btn btn-secondary w-100 w-sm-auto">@Localizer["ManageClasses"]</a>
    </div>
}