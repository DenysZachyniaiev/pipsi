@model WebApp.Models.Student
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["EditStudent"];
}

<h2>@Localizer["EditStudent"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="FirstName" class="form-label">@Localizer["FirstName"]</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="LastName" class="form-label">@Localizer["LastName"]</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">@Localizer["Save"]</button>
</form>