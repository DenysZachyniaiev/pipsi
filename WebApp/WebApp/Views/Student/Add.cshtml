@model WebApp.Models.Student
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Student</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-5">
        <h1>@Localizer["AddStudentTitle"]</h1>
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label for="FirstName" class="form-label">@Localizer["FirstNameLabel"]</label>
                <input type="text" class="form-control" id="FirstName" name="FirstName" required>
            </div>
            <div class="mb-3">
                <label for="LastName" class="form-label">@Localizer["LastNameLabel"]</label>
                <input type="text" class="form-control" id="LastName" name="LastName" required>
            </div>
            <button type="submit" class="btn btn-primary">@Localizer["AddStudentButton"]</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>